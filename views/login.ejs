<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>VehicleRentalManagement</title>

  
    <!-- 
      - favicon
    -->
    <link rel="shortcut icon" href="/images/logo_main_2.png" type="image/svg+xml">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body class="login-body">
    <header class="header" data-header>
        <div class="container">
            <div class="overlay" data-overlay></div>
            <a href="/" class="logo ">
                <img src="/images/logo_main_2.png" alt="logo" class="logo-main">
            </a>
            <nav class="navbar" data-navbar>
                <ul class="navbar-list">
                </ul>
            </nav>
            <div class="header-actions">
                <a href="#featured-car" class="" aria-labelledby="aria-label-txt"></a>
                <button class="nav-toggle-btn" data-nav-toggle-btn aria-label="Toggle Menu">
                    <span class="one"></span>
                    <span class="two"></span>
                    <span class="three"></span>
                </button>
            </div>
        </div>
    </header>
    <div class="login-image-wrap">
        <div class="login-wrap">
            <div class="login-html">
                <% if(locals.message){ %>
                    <div class="message-container">
                        <p><%= message %></p>
                    </div>
                <% } %>
                <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Sign In</label>
                <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab">Sign Up</label>
                <div class="login-form">
                    <form action="/login/user" method="POST">
                        <div class="sign-in-htm">
                            <div class="group">
                                <label class="label">Phone number</label>
                                <input name="username" type="tel" class="input">
                            </div>
                            <div class="group">
                                <label class="label">Password</label>
                                <input name="password" type="password" class="input">
                            </div>
                            <div class="group">
                                <input type="submit" class="button" value="Sign In">
                            </div>
                            <div class="hr"></div>
                        </div>
                    </form>
                    <form action="/signup" method="POST">
                        <div class="sign-up-htm">
                            <div class="group">
                                <label class="label">Full Name</label>
                                <input name="name_" type="text" class="input">
                            </div>
                            <div class="group">
                                <label class="label">Phone Number</label>
                                <input name="phoneNumber" type="tel" class="input">
                            </div>
                            <div class="group">
                                <label class="label">Enter Password</label>
                                <input name="password" type="password" class="input" >
                            </div>
                            <div class="group">
                                <input type="submit" class="button" value="Sign Up">
                            </div>
                            <div class="hr"></div>
                            <div class="foot-lnk">
                                <label for="tab-1">Already Member?</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

